generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model ContractEvent {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  type            String
  data            Json
  blockNumber     Int
  transactionHash String
  timestamp       DateTime @default(now())

  @@index([type])
  @@index([blockNumber])
  @@index([transactionHash])
  @@index([timestamp])
} 