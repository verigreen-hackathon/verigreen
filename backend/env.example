# Environment configuration for VeriGreen Backend

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Logging
LOG_LEVEL=INFO

# Filecoin/Storacha Configuration
# These will be generated when you run: python3 generate_ucan_headers.py
STORACHA_SPACE_DID=did:key:z6Mk...                    # Your space DID from w3 space ls
STORACHA_BASE_URL=https://up.storacha.network         # Storacha API endpoint  
STORACHA_UCAN_SECRET=u...                             # Generated UCAN secret (24hr expiry)
STORACHA_UCAN_TOKEN=uOqJlcm9vdHO...                   # Generated UCAN token (24hr expiry)

# Data directories (relative to backend root)
DATA_DIR=../data
RAW_DATA_DIR=../data/raw
PROCESSED_DATA_DIR=../data/processed

# Database Configuration (Optional)
DATABASE_URL=postgresql://user:password@localhost:5432/verigreen

# AWS S3 Configuration (for Sentinel-2 data - Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2 