# Environment configuration for VeriGreen Backend

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Logging
LOG_LEVEL=INFO

# Filecoin/Storacha Configuration
# Add Storacha API keys and endpoints here when available
STORACHA_AUTH_SECRET=your_auth_secret_here
STORACHA_AUTH_TOKEN=your_auth_token_here
STORACHA_SPACE_DID=your_space_did_here
STORACHA_BASE_URL=https://up.storacha.network

# Data directories (relative to backend root)
DATA_DIR=../data
RAW_DATA_DIR=../data/raw
PROCESSED_DATA_DIR=../data/processed

# Database Configuration (Optional)
DATABASE_URL=postgresql://user:password@localhost:5432/verigreen

# AWS S3 Configuration (for Sentinel-2 data - Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2 